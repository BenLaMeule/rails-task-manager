<h2>Name: <%= @task.name %></h2>
<p>Description: <%= @task.description %></p>
<p>Status: <%= @task.status %></p>
<p>Date of creation: <%= @task.created_at %></p>
<p>Last update: <%= @task.updated_at %></p>
<p><%= link_to "Edit task", edit_task_path %></p>
<%= link_to "Delete task", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<p><%= link_to "Back to the Tasks list", tasks_path %></p>
